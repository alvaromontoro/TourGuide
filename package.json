{
  "name": "tourguide",
  "version": "0.0.5",
  "description": "JS plugin that helps generate step-by-step instructions and demos in an easy way",
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "tests"
  },
  "files": [
    "dist/tourguide.css",
    "dist/tourguide.js",
    "dist/tourguide.min.js"
  ],
  "main": "dist/tourguide.min.js",
  "scripts": {
    "build": "webpack --output-filename tourguide.min.js --mode production",
    "build:dev": "webpack --output-filename tourguide.js --mode development",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint": "./node_modules/.bin/tslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "prebuild": "node-sass --include-path scss src/tourguide.scss dist/tourguide.css",
    "prebuild:dev": "node-sass --include-path scss src/tourguide.scss dist/tourguide.css",
    "start": "NODE_ENV=development webpack-dev-server",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/alvaromontoro/tourguide.git"
  },
  "keywords": [
    "tourguide",
    "guided tour",
    "spotlight",
    "tutorial",
    "javascript",
    "js",
    "html",
    "css",
    "javascript-plugin",
    "highlight",
    "instructions",
    "demos",
    "step-by-step"
  ],
  "author": "Alvaro Montoro",
  "license": "MIT",
  "homepage": "https://github.com/alvaromontoro/tourguide",
  "dependencies": {
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-modules-commonjs": "^7.10.4",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@types/node": "^14.11.10",
    "acorn": "^7.3.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-plugin-istanbul": "^5.0.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-polyfill": "^6.26.0",
    "eslint": "^5.6.1",
    "eslint-loader": "^2.1.1",
    "jest": "^26.2.2",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "ts-loader": "^8.0.5",
    "tslint": "^6.1.3",
    "webpack": "^5.1.3",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "bugs": {
    "url": "https://github.com/alvaromontoro/tourguide/issues"
  }
}
